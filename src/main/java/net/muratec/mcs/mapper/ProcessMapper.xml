  <!-- 一覧情報取得SQL -->
  <select id="selectProcStateManageList" parameterType="net.muratec.mcs.entity.maint.ReqGetProcStateManagementEntity" resultMap="ProcStateManageResultMap">
    SELECT
      PID,
      SYSTEM_ID,
      SERVICE_ID,
      NAME,
      NODE,
      PROC_TYPE,
      TELNET_PORT,
      RULE_NO,
      USE_FLAG,
      PROC_STATE,
      AVAILABILITY,
      HANDLE_PROC_GROUP,
      START_TIME
    FROM (
      SELECT
        row_number() over(order by P.SYSTEM_ID asc) as RN,
        PS.PID,
        P.SYSTEM_ID,
        P.SERVICE_ID,
        P.NAME,
        CASE P.METHOD
          WHEN 1 THEN
            (
              SELECT
                FRR.NODE_ID
              FROM
                FAILOVER_RULE_RLT FRR
              WHERE
                P.SYSTEM_ID = FRR.SYSTEM_ID
                AND P.RULE_NO = FRR.RULE_NO
            )
          WHEN 2 THEN
            (
              select
                NODE_ID
              from
                TAKEOVER_RULE_RLT TRR
              where
                P.SYSTEM_ID = TRR.SYSTEM_ID
                AND P.RULE_NO = TRR.RULE_NO
            )
          END NODE,
        (SELECT STRING FROM STRING_MASTER WHERE KEY = 'PROCESS_TYPE_STRING' AND CODE = P.PROC_TYPE) AS PROC_TYPE,
        P.TELNET_PORT,
        P.RULE_NO,
        P.USE_FLAG,
        (SELECT STRING FROM STRING_MASTER WHERE KEY = 'PROCESS_STATE_STRING' AND CODE = PS.PROC_STATE) AS PROC_STATE,
        (SELECT STRING FROM STRING_MASTER WHERE KEY = 'AVAIL_STRING' AND CODE = PS.AVAILABILITY) AS AVAILABILITY,
        PS.HANDLE_PROC_GROUP,
        PS.START_TIME
      FROM
        PROCESS P
        LEFT JOIN
          PROCESS_STATE PS
        ON
          P.SYSTEM_ID = PS.SYSTEM_ID
    )
    <where>
      <if test="fromRecordNum != null and toRecordNum != null">
        RN between #{fromRecordNum,jdbcType=DECIMAL} and #{toRecordNum,jdbcType=DECIMAL}
      </if>
    </where>
    ORDER BY
      SYSTEM_ID
  </select>

