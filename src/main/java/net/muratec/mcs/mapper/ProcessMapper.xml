  <select id="idSelect" parameterType="java.lang.String" resultMap="IdSelectResultMap">
    select
      p.SERVICE_ID as SERVICE_ID,
      LISTAGG(a.AMHS_NAME, ',') WITHIN GROUP (order by a.AMHS_ID asc) as AMHS_NAME_LIST,
      COUNT(a.AMHS_NAME) AS AMHS_NUM
